<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">

    <activeProfiles>
        <activeProfile>github</activeProfile>
    </activeProfiles>

    <profiles>
        <profile>
            <id>github</id>
            <repositories>
                    <repository>
                              <id>github-solacedev-pubsubplus-connector-framework</id>
                              <url>https://maven.pkg.github.com/solacedev/pubsubplus-connector-framework</url>
                              <releases>
                                        <enabled>false</enabled>
                              </releases>
                              <snapshots>
                                        <enabled>true</enabled>
                              </snapshots>
                    </repository>
                    <repository>
                              <id>github-solacedev-solace-spring-cloud</id>
                              <url>https://maven.pkg.github.com/SolaceDev/solace-spring-cloud</url>
                              <releases>
                                        <enabled>false</enabled>
                              </releases>
                              <snapshots>
                                        <enabled>true</enabled>
                              </snapshots>
                    </repository>
          </repositories>
          <pluginRepositories>
                    <pluginRepository>
                              <id>github-solacedev-pubsubplus-connector-framework</id>
                              <url>https://maven.pkg.github.com/solacedev/pubsubplus-connector-framework</url>
                              <releases>
                                        <enabled>false</enabled>
                              </releases>
                              <snapshots>
                                        <enabled>true</enabled>
                              </snapshots>
                    </pluginRepository>
          </pluginRepositories>
        </profile>
    </profiles>

    <servers>
        <server>
          <id>github-solacedev-pubsubplus-connector-framework</id>
          <username>${env.SOLACEDEV_GITHUB_USERNAME}</username>
          <password>${env.SOLACEDEV_GITHUB_TOKEN}</password>
        </server>
        <server>
          <id>github-solacedev-solace-spring-cloud</id>
          <username>${env.SOLACEDEV_GITHUB_USERNAME}</username>
          <password>${env.SOLACEDEV_GITHUB_TOKEN}</password>
        </server>
        <server>
            <id>github</id>
            <username>${env.GITHUB_ACTOR}</username>
            <password>${env.GITHUB_TOKEN}</password>
        </server>
        <server>
            <id>gpg.passphrase</id>
            <passphrase>${env.GPG_PASSPHRASE}</passphrase>
        </server>
    </servers>
</settings>
